FROM ubuntu:22.04

ARG DEBIAN_FRONTEND=noninteractive \
    LOCAL_USER_ID=1000 \
    LOCAL_GROUP_ID=1000

RUN apt-get update \
    && apt install -y \
      wget \
      git \
      python3 \
      pkg-config \
      build-essential \
      libavcodec58 \
      libavcodec-dev \
      libavutil56 \
      libavutil-dev \
      libavformat58 \
      libavformat-dev \
      libswresample3 \
      libswresample-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN useradd -u $LOCAL_USER_ID -m --user-group --shell /bin/bash rigaya
RUN groupmod -g $LOCAL_GROUP_ID rigaya
WORKDIR /home/rigaya
COPY . .
RUN chown -R rigaya:rigaya .
USER rigaya
